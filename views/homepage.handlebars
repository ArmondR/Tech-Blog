<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/" target="_blank">{{title}}</a>
                <span>posted by {{user.username}} on {{created_at}}</span>
            </div>
            <div class="meta">
                {{content}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>